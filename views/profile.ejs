<!-- views/profile.ejs -->

<!DOCTYPE html>
<html>

<head>
    <title>My Profile</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #87CEEB;
            /* Light blue background color */
            margin: 0;
            padding: 0;
        }

        .profiles-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            padding: 20px;
        }

        .profile-container {
            width: 300px;
            margin: 10px;
            text-align: center;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .profile img {
            max-width: 100%;
            border-radius: 50%;
            margin-bottom: 20px;
        }

        .profile h1 {
            font-size: 24px;
            margin: 10px 0;
        }

        .profile p {
            font-size: 18px;
            margin: 5px 0;
        }
    </style>
</head>

<body>
    <div class="profiles-container">
        <% profiles.forEach(profile=> { %>
            <div class="profile-container">
                <img src="<%= profile.imageUrl %>" alt="Profile Picture">
                <h1>
                    <%= profile.name %>
                </h1>
                <p>
                    <%= profile.occupation %>
                </p>
                <p>Email: <%= profile.email %>
                </p>
                <p>Location: <%= profile.location %>
                </p>
            </div>
            <% }); %>
    </div>
</body>

</html>